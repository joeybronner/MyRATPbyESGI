<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="fr.esgi.ratp.LineStationsActivity" >

        <TextView
            android:id="@+id/tvTitleWithStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ivTypeLineStation"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivTypeLineStation"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@id/tvTitleWithStation"
            android:layout_alignTop="@id/tvTitleWithStation"
            android:src="@drawable/bus" />

        <ImageView
            android:id="@+id/btAddStation"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@id/tvTitleWithStation"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tvTitleWithStation"
            android:clickable="true"
            android:src="@drawable/add" />

        <EditText
            android:id="@+id/etSearchStation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitleWithStation"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/tvsearch"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" >
        </EditText>

        <ListView
            android:id="@+id/listStation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etSearchStation"
            android:layout_marginTop="10dp" >
        </ListView>
    </RelativeLayout>

</ScrollView>