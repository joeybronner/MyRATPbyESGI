<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.esgi.ratp.SettingsActivity"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btPurgeData"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/purge"
        android:background="@null"
        android:text="@string/purgeData"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btLoadData"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:drawableLeft="@drawable/load"
        android:text="@string/loadData"
        android:textColor="@color/white" />

</LinearLayout>